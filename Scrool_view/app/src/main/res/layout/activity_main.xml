<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                android:src="@drawable/salad"
            />
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                android:src="@drawable/nintendo_logo_red"
            />
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                android:src="@drawable/nintendo_logo"
            />
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                       android:src="@drawable/network"
            />
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                       android:src="@drawable/nose"
            />
            <ImageView android:layout_width="match_parent" android:layout_height="300dp"
                       android:src="@drawable/personalities_categorization"
            />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>